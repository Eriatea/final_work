{% extends 'base.html.twig' %}

{% block title %}Регистрация на BlaBlaArticle{% endblock %}

{% block header %}{% endblock %}
{% block body %}
  <body class="signin-body">

  <div class="container">
    <div class="row">

      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Регистрация</h5>
            {{ form_start(registrationForm, { attr: {class: 'form-signin'} }) }}
            <h1 class="h3 mb-3 font-weight-normal">Регистрация</h1>

            {{ form_row(registrationForm.email, {
              attr: {placeholder: 'Ваш Email...'},
              label_attr: {class: ''}
            }) }}
            {{ form_row(registrationForm.firstName, {
              attr: {placeholder: 'Ваше Имя...'},
              label_attr: {class: ''}
            }) }}
            {{ form_row(registrationForm.plainPassword, {
              attr: {placeholder: 'Ваш Пароль...'},
              label_attr: {class: ''}
            }) }}

            {{ form_row(registrationForm.agreeTerms, {
              label: 'Согласен с условиями'
            }) }}

            <button class="btn btn-lg btn-primary btn-block" type="submit">Зарегистрироваться</button>
            {{ form_end(registrationForm) }}

          </div>
        </div>
      </div>
    </div>
  </div>

  </body>
{% endblock %}