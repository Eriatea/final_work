{% extends 'base_dashboard.html.twig' %}

{% block containerfluid %}
  <div class="row">

    <div class="col-xl-6">

      <h1 class="mt-4">{{ article.title }}</h1>
      <div class="media">
        <img class="mr-3" src="{{ article.imageFilename }}" width="250" height="250" alt="">
        {{ article.body }}
      </div>

    </div>

  </div>

  <hr>

  <div class="row my-4">

    <div class="col-xl-6">

      <a href="{{ path('app_dashboard_create_article') }}" class="btn btn-primary">Попробовать еще раз</a>
    </div>

  </div>
{% endblock %}
